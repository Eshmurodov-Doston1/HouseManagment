<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bottom_sheet_dialog"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/line_app"
            android:layout_marginTop="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="@color/line_color"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_2sdp"/>

        <TextView
            android:id="@+id/text_bottom"
           app:layout_constraintTop_toBottomOf="@id/line_app"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.9"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="0.5"
            android:padding="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/textColor"
            android:text="Dostonbek Eshmurodov"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/line"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintTop_toBottomOf="@id/text_bottom"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/image_zoom"
            android:scaleType="centerCrop"
            android:src="@drawable/image"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>