<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_currency"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.97"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardUseCompatPadding="true"
        android:outlineAmbientShadowColor="@color/hintColor"
        android:outlineSpotShadowColor="@color/hintColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:targetApi="p">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_item"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="@dimen/_12sdp"
                android:text="@string/app_name"
                app:layout_constraintWidth_percent="0.47"
                app:layout_constraintHorizontal_bias="0"
                android:fontFamily="@font/inter_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/date"
                app:layout_constraintTop_toTopOf="@id/text_item"
                app:layout_constraintBottom_toBottomOf="@id/text_item"
                android:gravity="right"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="@dimen/_12sdp"
                android:text="08.03.2022"
                android:fontFamily="@font/inter_medium"
                app:layout_constraintLeft_toRightOf="@id/text_item"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/text_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/valuta_type"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="USD"
                    android:fontFamily="@font/inter_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/valuta_sum"
                    android:text="10941.07"
                    android:gravity="right"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>