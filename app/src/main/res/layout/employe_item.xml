<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:ms9_shadowTranslationZ="3dp"
        app:ms9_shadowElevation="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:outlineAmbientShadowColor="@color/shadow_color"
            android:outlineSpotShadowColor="@color/shadow_color"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:targetApi="p">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/name"
                        android:textColor="@color/textColor"
                        android:textStyle="normal"
                        android:paddingVertical="@dimen/_4sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Имя Фамилия - Dostonbek Eshmurodov"
                        android:fontFamily="@font/inter_medium"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_4sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/role"
                        android:textColor="@color/textColor"
                        android:paddingHorizontal="@dimen/_4sdp"
                        android:textStyle="normal"
                        android:paddingVertical="@dimen/_4sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Роль - Полный доступ"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/last_entrance"
                        android:textColor="@color/textColor"
                        android:paddingHorizontal="@dimen/_4sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:textStyle="normal"
                        android:textSize="@dimen/_10sdp"
                        android:text="Последний вход - 13:43 25.06.2022"
                        android:fontFamily="@font/inter_medium"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:gravity="center"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/call"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/card_call_color"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp">
                        <ImageView
                            android:src="@drawable/ic_call"
                            android:padding="@dimen/_6sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:tint="@color/color_call" />
                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
</androidx.constraintlayout.widget.ConstraintLayout>