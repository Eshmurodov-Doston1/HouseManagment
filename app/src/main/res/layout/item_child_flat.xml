<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:ms9_shadowTranslationZ="5dp"
        app:ms9_shadowElevation="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_child"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            android:outlineAmbientShadowColor="@color/shadow_color"
            android:outlineSpotShadowColor="@color/shadow_color"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:targetApi="p">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingVertical="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/radio_status"
                    android:id="@+id/text_number"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:text="№341"
                    android:gravity="left"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.96"
                    android:id="@+id/radio_status"
                    android:checked="true"
                    android:gravity="center"
                    android:buttonTint="@color/buttonFull"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linear_line"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@id/text_number"
                    app:layout_constraintVertical_bias="0.1"
                    android:background="@color/line_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@id/linear_line">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/place_holder"
                        app:layout_constraintBottom_toBottomOf="@id/linear"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.35" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/linear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:minHeight="@dimen/_70sdp"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toRightOf="@id/image"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/image">

                        <LinearLayout
                            android:id="@+id/admin_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/admin_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:padding="@dimen/_1sdp"
                                android:text="@string/operator"
                                android:textColor="@color/hintColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/admin_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:padding="@dimen/_1sdp"
                                android:text="Негр Негрович"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/address_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/address"
                                android:textColor="@color/hintColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/address_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"

                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="2"
                                android:padding="@dimen/_2sdp"
                                android:text="Африка ко’часи, Подъезд 2, №341"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/purchased_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/purchased_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/purchased"
                                android:textColor="@color/hintColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/purchased_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="2"
                                android:padding="@dimen/_2sdp"
                                android:text="В рассрочку"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/term_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/term_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/term"
                                android:textColor="@color/hintColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/term_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="2"
                                android:padding="@dimen/_2sdp"
                                android:text="36 Месяцев"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/paid_for_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/paid_for_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/paid_for"
                                android:textColor="@color/hintColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/paid_for_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="2"
                                android:padding="@dimen/_2sdp"
                                android:text="31 Месяц"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/paid_out_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/paid_out_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/paid_out"
                                android:textColor="@color/hintColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/paid_out_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="2"
                                android:padding="@dimen/_2sdp"
                                android:text="123 831 591"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/left_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/left_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/left"
                                android:textColor="@color/hintColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/left_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="2"
                                android:padding="@dimen/_2sdp"
                                android:text="3 831 591"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/debt_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/debt_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/debt"
                                android:textColor="@color/hintColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/debt_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="2"
                                android:padding="@dimen/_2sdp"
                                android:text="312 491 658"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/square_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/square_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/square_meter"
                                android:textColor="@color/hintColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/square_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="2"
                                android:padding="@dimen/_2sdp"
                                android:text="58 м²"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/allSumm_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/allSumm_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/cash_all_summ"
                                android:textColor="@color/hintColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/allSumm_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="2"
                                android:padding="@dimen/_2sdp"
                                android:text="431 414 951"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_data"
                    app:layout_constraintTop_toBottomOf="@id/cons_b"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/chat_btn"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.96"
                        app:cardBackgroundColor="@color/sms_color"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/_4sdp"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp">
                        <ImageView
                            android:src="@drawable/ic_chat"
                            android:padding="@dimen/_6sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/call_btn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/chat_btn"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.98"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/call_color"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="@dimen/_4sdp"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp">
                        <ImageView
                            android:src="@drawable/ic_call"
                            android:padding="@dimen/_6sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        app:layout_constraintTop_toTopOf="@id/call_btn"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/call_btn"
                        app:layout_constraintBottom_toBottomOf="@id/call_btn"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/all_sum_hint"
                            android:text="@string/price"
                            android:maxLines="1"
                            android:textStyle="normal"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/hintColor"
                            android:fontFamily="@font/inter_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/all_sum"
                            android:textStyle="bold"
                            android:text="431 414 951"
                            android:maxLines="1"
                            android:textColor="@color/textColor"
                            android:fontFamily="@font/inter_medium"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textSize="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
</androidx.constraintlayout.widget.ConstraintLayout>